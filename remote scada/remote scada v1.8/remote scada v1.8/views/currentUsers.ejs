<!DOCTYPE html>
<html lang="en">
  <%- include('./parts/head') %>
  <body>
    <div class="container-scroller">
      <%- include('./parts/topBar') %>
      <div class="container-fluid page-body-wrapper">
        <%- include('./parts/sideBar') %>
        <div class="main-panel">
          <div class="content-wrapper"></div>
          <!-- start page content-->
          <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
              <div class="card-body">
                <h4 class="card-title">Current Users</h4>
                <table class="table table-striped">
                  <thead>
                    <tr>
                      <th>user Name</th>
                      <th>Role</th>
                      <th>Creation Date</th>
                      <th>last login</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for (let user of users){%>
                    <tr>
                      <td class="py-1"><%=user.userName%></td>
                      <td><%=user.role%></td>
                      <td>
                        <% let crDate = new Date(Number(user.creationDate)) %>
                        <%= user.creationDate?crDate.getFullYear() + "-" +
                        (crDate.getMonth() + 1) + "-" + crDate.getDate() + " " +
                        crDate.getHours() + ":" + crDate.getMinutes() + ":" +
                        crDate.getSeconds(): 'No creation Date detected' %>
                      </td>
                      <td>
                        <% crDate = new Date(Number(user.lastLogin)) %> <%=
                        user.lastLogin? crDate.getFullYear() + "-" +
                        (crDate.getMonth() + 1) + "-" + crDate.getDate() + " " +
                        crDate.getHours() + ":" + crDate.getMinutes() + ":" +
                        crDate.getSeconds():'No login detected' %>
                      </td>
                    </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
          <!-- end of page content-->
          <%- include('./parts/footer') %>
        </div>
      </div>
    </div>
    <%- include('./parts/scripts') %>
  </body>
</html>
