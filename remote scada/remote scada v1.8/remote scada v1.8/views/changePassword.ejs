<!DOCTYPE html>
<html lang="en">
	<%- include('./parts/head') %>
	<body>
		<div class="container-scroller">
			<%- include('./parts/topBar') %>
			<div class="container-fluid page-body-wrapper">
				<%- include('./parts/sideBar') %>
				<div class="main-panel">
					<div class="content-wrapper"><%#- include('./parts/pageHeader') %></div>
					<div class="col-md-7 grid-margin stretch-card">
						<div class="card">
							<form class="forms-sample" method="POST" target="/changePassword">
								<div class="card-body">
									<h4 class="card-title">Change Password</h4>

									<div class="form-group">
										<label>Current Password</label>
										<input type="password" class="form-control form-control-lg" placeholder="current password" aria-label="User name" name="cPassword" />
									</div>
									<div class="form-group">
										<label>New password</label>
										<input type="password" class="form-control form-control-lg" placeholder="new password" aria-label="Description" name="newPassword" />
									</div>
								</div>
								<div class="card-body">
									<div class="form-group">
										<button type="submit" class="btn btn-success mr-2">Submit</button>
										<button class="btn btn-light">Cancel</button>
									</div>
								</div>
							</form>
						</div>
					</div>
					<%- include('./parts/footer') %>
				</div>
			</div>
		</div>
		<%- include('./parts/scripts') %>
	</body>
</html>
