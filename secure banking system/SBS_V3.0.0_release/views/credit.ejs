<!DOCTYPE html>
<html>
    <%- include('./parts/head.ejs') %>

    <body class="cbp-spmenu-push">
        <div class="main-content">
            <%- include('./parts/sidebar.ejs') %> <%- include('./parts/topbar.ejs') %>
            <!-- main content start-->
            <div id="page-wrapper">
                <div class="main-page">
                    <h2 class="title1"></h2>
                    <div class="forms validation">
                        <div class="row">
                            <div
                                class="col-md-6 validation-grids validation-grids-right"
                                style="margin-left: 30%; width: 40%;"
                            >
                                <div class="inline-form widget-shadow">
                                    <div class="form-title">
                                        <h4>Transfer</h4>
                                    </div>
                                    <div class="form-body">
                                        <form data-toggle="validator" action="/transfer" method="POST">
                                            <div class="form-group has-feedback">
                                                <input
                                                    type="text"
                                                    class="form-control"
                                                    id="inputEmail"
                                                    placeholder="To"
                                                    name="toId"
                                                    data-error="Bruh, that email address is invalid"
                                                    required
                                                />
                                            </div>
                                            <div class="form-group">
                                                <input
                                                    type="text"
                                                    data-toggle="validator"
                                                    data-minlength="6"
                                                    class="form-control"
                                                    id="inputPassword"
                                                    name="amount"
                                                    placeholder="amount SAR"
                                                    required
                                                />
                                                <input type="hidden" name="username" value="<%= userData.firstName%>" />
                                                <input type="hidden" name="balance" value="<%= userData.balance%>" />
                                                <input type="hidden" name="fromId" value="<%= userData._id%>" />
                                            </div>
                                            <div class="bottom">
                                                <div class="form-group">
                                                    <button type="submit" class="btn btn-primary ">
                                                        Confirm
                                                    </button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>
            </div>
            <%- include('./parts/footer.ejs') %>
        </div>
        <%- include('./parts/scripts.ejs') %>
    </body>
</html>
