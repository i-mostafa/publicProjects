<!DOCTYPE html>
<html lang="en">
  <%- include('./parts/head') %>
  <body>
    <div class="container-scroller">
      <%- include('./parts/topBar') %>
      <div class="container-fluid page-body-wrapper">
        <div class="main-panel">
          <div class="content-wrapper">
            <div class="col-12 grid-margin" style="overflow: hidden">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Wind direction simulator</h4>
                  <div class="row">
                    <div class="col-3">
                      <div class="card-body">
                        <blockquote
                          class="blockquote blockquote-primary text-center"
                        >
                          <h3>Wind turbine</h3>
                        </blockquote>
                      </div>
                      <div
                        id="turbineContainer"
                        style="transform: rotate3d(0, 1, 0, 192deg)"
                      ></div>
                    </div>
                    <div class="col-3">
                      <div class="card-body">
                        <blockquote
                          class="blockquote blockquote-primary text-center"
                        >
                          <h3>Mode</h3>
                        </blockquote>
                      </div>

                      <div class="form-group">
                        <div class="row">
                          <div class="col-3"></div>
                          <div class="col-9">
                            <div class="form-radio">
                              <label class="form-check-label">
                                <input
                                  type="radio"
                                  class="form-check-input"
                                  name="system"
                                  id="manual"
                                  value="manual"
                                  onchange="changeMode(this)" />
                                Manual <i class="input-helper"></i
                              ></label>
                            </div>
                            <div class="form-radio">
                              <label class="form-check-label">
                                <input
                                  type="radio"
                                  class="form-check-input"
                                  name="system"
                                  id="automatic"
                                  value="automatic"
                                  checked=""
                                  onchange="changeMode(this)" />
                                Automatic <i class="input-helper"></i
                              ></label>
                            </div>
                          </div>
                        </div>
                        <div class="row">
                          <div class="col-3"></div>
                          <label
                            for="exampleInputEmail2"
                            class="col-9 col-form-label"
                            >Temp slider</label
                          >
                        </div>
                        <div class="row">
                          <div class="col-3"></div>
                          <div class="range col-9">
                            <input
                              type="range"
                              class="form-range rotated"
                              id="slider"
                              onchange="changeTemp(this)"
                            />
                          </div>
                        </div>
                        <div class="row">
                          <div class="col-3"></div>
                          <label class="col-9 col-form-label"
                            >Speed slider</label
                          >
                        </div>
                        <div class="row">
                          <div class="col-3"></div>
                          <div class="range col-9">
                            <input
                              type="range"
                              class="form-range rotated"
                              id="Speedslider"
                              onchange="changeSpeed_(this)"
                            />
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="col-3">
                      <div class="card-body">
                        <blockquote
                          class="blockquote blockquote-primary text-center"
                        >
                          <h3>Monitor</h3>
                        </blockquote>
                      </div>
                      <div class="row">
                        <div class="col-12">
                          <div class="form-group row">
                            <label class="col-sm-5 col-form-label"
                              >Status</label
                            >
                            <div class="col-sm-5">
                              <button
                                type="button"
                                class="btn btn-success"
                                id="status"
                              >
                                Stable
                              </button>
                            </div>
                          </div>
                          <div class="form-group row">
                            <label
                              for="exampleInputEmail2"
                              class="col-sm-5 col-form-label"
                              >Temp</label
                            >
                            <div class="col-sm-6">
                              <input
                                type="text"
                                class="form-control"
                                id="temp"
                                readonly
                              />
                            </div>
                          </div>
                          <div class="form-group row">
                            <label
                              for="exampleInputEmail2"
                              class="col-sm-5 col-form-label"
                              >Wind angle</label
                            >
                            <div class="col-sm-6">
                              <input
                                type="text"
                                class="form-control"
                                id="windAngle"
                                readonly
                              />
                            </div>
                          </div>
                          <div class="form-group row">
                            <label
                              for="exampleInputEmail2"
                              class="col-sm-5 col-form-label"
                              >Turbine angle</label
                            >
                            <div class="col-sm-6">
                              <input
                                type="text"
                                class="form-control"
                                id="turbineAngle"
                                readonly
                              />
                            </div>
                          </div>
                          <div class="form-group row">
                            <label
                              for="exampleInputEmail2"
                              class="col-sm-5 col-form-label"
                              >TurbineSpeed</label
                            >
                            <div class="col-sm-6">
                              <input
                                type="text"
                                class="form-control"
                                id="turbineSpeed"
                                readonly
                              />
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="col-3">
                      <div class="card-body">
                        <blockquote
                          class="blockquote blockquote-primary text-center"
                        >
                          <h3>Wind direction</h3>
                        </blockquote>
                      </div>
                      <img
                        src="assets/images/arrow.png"
                        alt="wind turbine"
                        class="wind-turbine pointer"
                        id="pointer"
                      />
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include('./parts/scripts') %>
  </body>

  <script src="./assets/js/animation.js"></script>
  <script src="./assets/js/controller.js"></script>
  <script src="./assets/js/update.js"></script>
</html>
